<!DOCTYPE html>
<html>
  <head>
    <title>OdinFlightBooker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar sticky-top bg-secondary p-0'>
      <%= link_to root_path, class: 'navbar-brand p-0' do %>
        <h3 class='title text-warning m-2'>
          <%= image_tag 'odin-logo.svg', size: 50 %>
          Odin Flight Booker
        </h3>
      <% end %>
    </nav>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>

    <div class='container'>
      <div class='row'>
        <div class='col'>
          <div class='card bg-light mt-5'>
            <div class="card-header bg-primary">
              <h1 class='card-title text-light m-0'><%= yield(:header) %></h1>
            </div>
            <div class='card-body'>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
